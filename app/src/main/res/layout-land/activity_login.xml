<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_title"
        android:textSize="20sp"
        android:padding="15dp"
        android:textStyle="bold"
        android:text="Supervisión"
        android:layout_centerHorizontal="true"
        android:textColor="@color/ligth_blue"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_supervisor_account_black_48dp"
        android:background="@color/ligth_blue"
        android:layout_margin="10dp"
        android:layout_below="@+id/txt_title"
        android:layout_centerHorizontal="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ingresar DNI"
        android:layout_below="@+id/imageView"
        android:id="@+id/edtxt_dni"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="15sp"
        android:inputType="text"
        android:layout_margin="10dp"
        materialdesign:met_maxCharacters="8"
        />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:background="#1E88E5"
        android:text="Iniciar Sesión"
        android:layout_margin="10dp"
        android:layout_below="@+id/edtxt_dni"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>