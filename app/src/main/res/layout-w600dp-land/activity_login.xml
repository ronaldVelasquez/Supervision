<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_supervisor_account_black_48dp"
        android:background="@color/ligth_blue"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ingresar DNI"
        android:layout_below="@+id/imageView"
        android:id="@+id/edtxt_dni"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="15sp"
        android:inputType="text"
        android:layout_margin="30dp"
        materialdesign:met_maxCharacters="8"
        />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:background="#1E88E5"
        android:text="Iniciar SesiÃ³n"
        android:layout_margin="30dp"
        android:layout_below="@+id/edtxt_dni"
        android:layout_centerHorizontal="true" />




</RelativeLayout>